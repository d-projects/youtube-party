<%- include ('./partials/header') %>

<%- include ('./partials/nav') %>

    <div class = "main-container">

    <div class = "iframe-api">
        <script src="https://www.youtube.com/iframe_api"></script>
    </div>

    <div id = "video-container">
        Loading...
    </div>

    <div class = "right-container">

        <div class = "alert alert-success text-center main-message">
            <h4> </h4>
        </div>

        <div class = "black-container">

            <div class = "sessionID">
                <h4> Room ID: <%= room %> <h4>
            </div>
    
            <div class="user-count">
                <h4>Participants: <span class = "numPeople"></span></h4>
            </div>

        </div>



        <div class = "under-message">

        <div class = "right-left-container">

            <div class = "chat-container">
                <strong><p id="message"></p></strong>
                <hr>
                <div class = "chat"></div>
            </div>
            <form id = "msgForm">
                <div class="form-row">
                    <div class="col-9">
                        <input type="text" class="form-control form-control-md" name="chatInput" required >
                    </div>
                    <div class="col-3 ">
                        <button type = "submit" class = "btn btn-secondary">Send</button>
                    </div>
                    </div>
            </form>

            <div class = "view-users-container" style = "display: none;">
                <h3 class = "text-center"> Users </h3>
                <ol>

                </ol>
            </div>

            <div class = "change-name-container" style = "display: none;">
                <form id = "nameForm">
                    <div class="form-row">
                        <div class="col-12">
                            <label for="newName">Choose a new name: </label>
                            <input type="text" class="form-control form-control-md" name="newName" id="newName">
                        </div>
                    </div>
                    <br>
                    <div class="form-row">
                        <div class="col-3 ">
                            <button type = "submit" class = "btn btn-secondary">Change</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>

        <div class = "controls-container">

            <div clas = "controls-buttons">
                <!-- <div class="form-row">
                    <button type = "button" class = "btn btn-secondary control">Take Control</button>
                </div> -->
                <% if (!master) { %>
                    <div class="form-row">
                        <button type = "button" class = "btn btn-primary sync">Sync With Host</button>
                    </div>
                <% } %>

                <div class="form-row">
                    <button type = "button" class = "btn btn-secondary view-chat">Display Chat</button>
                </div>
                    
                <div class="form-row">
                    <button type = "button" class = "btn btn-success view-users">View All Users</button>
                </div>

                <div class="form-row">
                    <a href="/" class="text-white leave"><button type = "button" class = "btn btn-danger"> Leave </button></a>
                </div>
            </div>

            </div>

        </div>


        
    </div>

</div>

<script src = 'js/youtube-api-functions.js'></script>
<div class = "chat-script"></div>
<script src = '/socket.io/socket.io.js'></script>



<%- include ('./partials/footer') %>